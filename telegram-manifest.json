{
  "name": "Vibe Player",
  "short_name": "VibePlayer",
  "description": "Audio Visualizer with 9 stunning visualization modes",
  "version": "1.0.0",
  "platform": "telegram",
  "bot": {
    "username": "@VibePlayerBot",
    "token": "TELEGRAM_BOT_TOKEN"
  },
  "webapp": {
    "url": "https://vibe-player.vercel.app/vibe-player-vanilla/",
    "viewport": {
      "height": "expand",
      "width": "100%"
    },
    "header_color": "#0a0a0a",
    "background_color": "#0a0a0a",
    "secondary_bg_color": "#1a1a1a"
  },
  "features": [
    "audio_upload",
    "visualizations",
    "haptic_feedback",
    "theme_adaptation",
    "cloud_storage"
  ],
  "permissions": [
    "audio",
    "storage"
  ],
  "theme_params": {
    "supports_dark_mode": true,
    "custom_colors": {
      "bigsis_primary": "#00D4FF",
      "bro_primary": "#FF9500",
      "lilsis_primary": "#D946EF",
      "cbo_primary": "#30D158"
    }
  },
  "menu_button": {
    "type": "web_app",
    "text": "ðŸŽµ Open Vibe Player",
    "web_app": {
      "url": "https://vibe-player.vercel.app/vibe-player-vanilla/"
    }
  },
  "commands": [
    {
      "command": "/start",
      "description": "Start the bot and open Vibe Player"
    },
    {
      "command": "/help",
      "description": "Show help information"
    },
    {
      "command": "/about",
      "description": "About Vibe Player"
    },
    {
      "command": "/webapp",
      "description": "Open Vibe Player Mini App"
    }
  ],
  "languages": ["en"],
  "categories": ["music", "entertainment", "tools"],
  "screenshots": [
    {
      "url": "https://vibe-player.vercel.app/screenshots/bars.png",
      "caption": "Bars Visualization"
    },
    {
      "url": "https://vibe-player.vercel.app/screenshots/galaxy.png",
      "caption": "Galaxy Visualization"
    },
    {
      "url": "https://vibe-player.vercel.app/screenshots/particles.png",
      "caption": "Particles Visualization"
    }
  ],
  "developer": {
    "name": "Digital DaVinci",
    "website": "https://github.com/ForkIt369/vibe-player",
    "support": "https://t.me/VibePlayerSupport"
  }
}