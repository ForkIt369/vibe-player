{
  "version": 2,
  "cleanUrls": false,
  "trailingSlash": false,
  "buildCommand": "echo 'No build required'",
  "outputDirectory": ".",
  "public": false,
  "functions": {
    "api/telegram-webhook.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/telegram-webhook",
      "dest": "/api/telegram-webhook.js"
    },
    {
      "src": "/(.*\\.js)$",
      "dest": "/vibe-player-vanilla/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Content-Type": "application/javascript; charset=utf-8"
      }
    },
    {
      "src": "/(.*\\.css)$",
      "dest": "/vibe-player-vanilla/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate", 
        "Content-Type": "text/css; charset=utf-8"
      }
    },
    {
      "src": "/(.*\\.html)$",
      "dest": "/vibe-player-vanilla/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Content-Type": "text/html; charset=utf-8"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/vibe-player-vanilla/$1"
    },
    {
      "src": "/",
      "dest": "/vibe-player-vanilla/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Content-Type": "text/html; charset=utf-8"
      }
    }
  ],
  "headers": [
    {
      "source": "/vibe-player-vanilla/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https://telegram.org blob: data:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://telegram.org; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https:; media-src 'self' blob: data:; connect-src 'self' https://telegram.org https://*.telegram.org wss://*.telegram.org blob: data:; frame-ancestors https://web.telegram.org https://webk.telegram.org https://webz.telegram.org;"
        }
      ]
    }
  ]
}