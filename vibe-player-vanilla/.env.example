# Vibe Player Telegram Bot Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Application URL (for webhook and Mini App)
# For local development: use ngrok or similar tunnel service
# For production: your deployed URL
APP_URL=https://your-app-url.vercel.app

# Server Port (for local development)
PORT=3000

# Node Environment
NODE_ENV=development

# Optional: Your Telegram Chat ID (for testing)
# You can get this by messaging @userinfobot
TEST_CHAT_ID=

# Optional: Bot Username (without @)
BOT_USERNAME=VibePlayerBot

# Deployment Platform (vercel, netlify, custom)
DEPLOYMENT_PLATFORM=vercel

# Optional: Analytics (if you want to track usage)
ANALYTICS_ENABLED=false

# Security: Content Security Policy
CSP_REPORT_URI=

# Optional: Debug Mode
DEBUG=false